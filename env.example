# MCP Remote SSH Configuration
# Copy this file to .env and customize for your environment

# Default SSH connection settings
MCP_SSH_HOST=your-remote-host.com
MCP_SSH_PORT=22
MCP_SSH_USER=your-username
MCP_SSH_KEY=/path/to/your/private/key

# Connection timeouts
MCP_SSH_CONNECT_TIMEOUT=30
MCP_SSH_KEEPALIVE=30

# Security settings (optional - uses defaults if not set)
# MCP_SSH_CONFIG=path/to/config.yaml

# Permissibility Level (low, medium, high)
# - low: Basic read-only operations only
# - medium: Read operations + safe write operations  
# - high: Full administrative access with sudo
MCP_SSH_PERMISSIBILITY_LEVEL=medium

# Password Configuration
# MCP_PASSWORD can be used as a fallback for both SSH and sudo passwords
MCP_PASSWORD=your-default-password

# Specific passwords (if not set, MCP_PASSWORD will be used as fallback)
MCP_SSH_PASSWORD=your-ssh-password
MCP_SSH_SUDO_PASSWORD=your-sudo-password

# Interactive password handling
MCP_SSH_INTERACTIVE_PASSWORD=true

# Logging
DEBUG=false
LOG_LEVEL=INFO
