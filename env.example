# MCP Remote SSH Configuration
# Copy this file to .env and customize for your environment

# Default SSH connection settings
MCP_SSH_HOST=your-remote-host.com
MCP_SSH_PORT=22
MCP_SSH_USER=your-username
MCP_SSH_KEY=/path/to/your/private/key

# Connection timeouts
MCP_SSH_CONNECT_TIMEOUT=30
MCP_SSH_KEEPALIVE=30

# Security settings (optional - uses defaults if not set)
# MCP_SSH_CONFIG=path/to/config.yaml

# Logging
DEBUG=false
LOG_LEVEL=INFO
